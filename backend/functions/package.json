{
  "name": "skillnest-backend",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for SkillNest backend",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.5.0",
    "razorpay": "^2.9.2",
    "socket.io": "^4.7.4",
    "algoliasearch": "^4.22.0",
    "nodemailer": "^6.9.8",
    "twilio": "^4.20.0",
    "sharp": "^0.33.0",
    "uuid": "^9.0.1",
    "moment": "^2.29.4",
    "geolib": "^3.3.4"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
